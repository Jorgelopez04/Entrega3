                    font-size: 16px;
                    padding: 10px 20px;
                }
            </style>

            <button id="miBoton1" class="boton-minimalista"> Registro usuario...............................................</button>
        }
        @using (Html.BeginForm("cambioEstrato", "Home", FormMethod.Post))
        {
            <button id="miboton2" class="boton-minimalista"> Cambio de Estrato....................................................</button>
        }
        @using (Html.BeginForm("cambioEnergia", "Home", FormMethod.Post))
        {
            <button id="miboton3" class="boton-minimalista"> Cambio de datos de la energia....................................................</button>
        }
        @using (Html.BeginForm("cambioAgua", "Home", FormMethod.Post))
        {
            <button id="miboton4" class="boton-minimalista"> Cambio de datos del agua....................................................</button>
        }

        {
        <style>
            .boton-minimalista1 {
                background-color: transparent;
                border: 2px solid red;
                color: #333;
                font-size: 16px;
                padding: 10px 20px;
            }
        </style>
        <button id="miboton6" class="boton-minimalista1"> Estadisticas............................................................</button>
        }
    </div>
</body>
</html>

